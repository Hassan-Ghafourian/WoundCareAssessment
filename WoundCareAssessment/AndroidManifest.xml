<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sina.pars.woundcareassessment"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.sina.pars.woundcareassessment.application.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".activities.login.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.sina.pars.woundcareassessment.model.providers.UserProvider"
            android:authorities="com.sina.pars.woundcareassessment.model.providers.UserProvider" >
        </provider>
    </application>

</manifest>